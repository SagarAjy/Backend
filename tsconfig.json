{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",  // This should point to the directory where your TypeScript files are located
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "inlineSources": true
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "babel.config.js"  // Include any other configuration files if needed
  ],
  "exclude": [
    "node_modules",
    "build/**/*"
  ]
}
